<Window x:Class="CanKitToolkit.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="{DynamicResource Title_MainWindow}" Height="760" Width="1300">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>   <!-- Menu -->
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="360"/>  <!-- Left: endpoint + logs -->
            <ColumnDefinition Width="12"/>   <!-- gutter -->
            <ColumnDefinition Width="*"/>    <!-- Right: frames -->
        </Grid.ColumnDefinitions>

        <!-- Top Menu -->
        <Menu Grid.Row="0" Grid.ColumnSpan="3">
            <MenuItem Header="{DynamicResource Menu_File}" HorizontalAlignment="Right">
                <MenuItem Header="{DynamicResource Button_Save}" Command="{Binding SaveDataCommand}"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Tools}">
                <MenuItem Header="{DynamicResource Menu_ZlgBuilder}" Command="{Binding OpenZlgEndpointBuilderCommand}"/>
                <Separator/>
                <MenuItem Header="{DynamicResource Title_Setting}" Command="{Binding OpenSettingsDialogCommand}"/>
            </MenuItem>
            <MenuItem Header="{DynamicResource Menu_Help}" HorizontalAlignment="Right">
                <MenuItem Header="{DynamicResource Menu_About}" Command="{Binding OpenAboutDialogCommand}"/>
            </MenuItem>
        </Menu>

        <!-- Left panel: endpoints + logs -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Endpoint selection row -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,8">
                <TextBlock Text="{DynamicResource Label_Endpoint}" VerticalAlignment="Center" Margin="0,0,8,0" Width="60"/>
                <ComboBox Width="320"
                          ItemsSource="{Binding Endpoints}"
                          SelectedItem="{Binding SelectedEndpoint}"
                          DisplayMemberPath="DisplayName"/>
                <Button Content="{DynamicResource Button_Refresh}" Margin="8,0,0,0" Padding="12,4" Command="{Binding RefreshEndpointsCommand}"/>
            </StackPanel>

            <!-- Custom endpoint input -->
            <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,12">
                <TextBlock Text="{DynamicResource Label_Custom}" VerticalAlignment="Center" Margin="0,0,8,0" Width="60"
                           Visibility="{Binding IsCustomSelected, Converter={StaticResource BoolToVis}}"/>
                <TextBox Width="222" Text="{Binding CustomEndpoint, UpdateSourceTrigger=PropertyChanged}"
                         Visibility="{Binding IsCustomSelected, Converter={StaticResource BoolToVis}}"  Padding="0,3,0,2"/>
                <Button Content="{DynamicResource Button_Open}" Margin="8,0,0,0" Padding="12,4" Command="{Binding OpenCustomEndpointCommand}" 
                        Visibility="{Binding IsCustomSelected, Converter={StaticResource BoolToVis}}"/>
      
            </StackPanel>

            <!-- Logs -->
            <Grid Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{DynamicResource Label_Logs}" FontWeight="Bold" Margin="0,0,0,4" Grid.Row="0"/>
                <Border Grid.Row="1" BorderThickness="1" BorderBrush="#DDD">
                    <ScrollViewer VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding Logs}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock FontFamily="Consolas" Text="{Binding}" TextWrapping="NoWrap" TextTrimming="None"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </Border>
            </Grid>
        </Grid>

        <!-- Right panel: Frames list with tabs -->
        <Grid Grid.Row="1" Grid.Column="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TabControl Grid.Column="0">
                <TabControl.Resources>
                    <Style TargetType="TabItem" BasedOn="{StaticResource {x:Type TabItem}}">
                        <Setter Property="MinWidth" Value="0"/>
                        <Setter Property="MinHeight" Value="0"/>
                        <Setter Property="Padding"  Value="8,6"/>
                        <Setter Property="Margin"   Value="0,0,0,4"/>
                    </Style>
                </TabControl.Resources>
            <!-- Categorized (by ID) -->
            <TabItem Header="{DynamicResource Tab_Categorized}">
                <Border BorderThickness="1" BorderBrush="#DDD" SnapsToDevicePixels="True" UseLayoutRounding="True">
                    <DataGrid  x:Name="FramesGrid" ItemsSource="{Binding Frames}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserSortColumns="False"
                              CanUserDeleteRows="False"
                              EnableRowVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu DataContext="{Binding DataContext, Source={x:Reference FramesGrid}}">
                                            <MenuItem Header="{DynamicResource Menu_CopyToClipboard}"
                                                Command="{Binding CopyFrameToClipboardCommand}"
                                                CommandParameter="{Binding PlacementTarget.DataContext,
                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="{DynamicResource Menu_OpenDetail}"
                                                Command="{Binding OpenFrameDetailsCommand}"
                                                CommandParameter="{Binding PlacementTarget.DataContext,
                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{DynamicResource Header_Time}" Binding="{Binding Time}" Width="130"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Dir}" Binding="{Binding Dir}" Width="60"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Proto}" Binding="{Binding Kind}" Width="80"/>
                            <DataGridTextColumn Header="{DynamicResource Header_ID}" Binding="{Binding Id}" Width="120"/>
                            <DataGridTextColumn Header="{DynamicResource Header_DLC}" Binding="{Binding Dlc}" Width="60"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Count}" Binding="{Binding Count}" Width="90"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Cycle}" Binding="{Binding Period}" Width="100"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Data}" Binding="{Binding Data}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>

            <!-- Sequential (by time, all frames) -->
            <TabItem Header="{DynamicResource Tab_Sequential}">
                <Border BorderThickness="1" BorderBrush="#DDD" SnapsToDevicePixels="True" UseLayoutRounding="True">
                    <DataGrid  x:Name="AllFramesGrid" ItemsSource="{Binding AllFrames}"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              IsReadOnly="True"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserSortColumns="False"
                              EnableRowVirtualization="True"
                              ScrollViewer.CanContentScroll="True"
                              VirtualizingPanel.IsVirtualizing="True"
                              VirtualizingPanel.VirtualizationMode="Recycling">
                        <DataGrid.Resources>
                            <Style TargetType="DataGridRow">
                                <Setter Property="ContextMenu">
                                    <Setter.Value>
                                        <ContextMenu DataContext="{Binding DataContext, Source={x:Reference AllFramesGrid}}">
                                            <MenuItem Header="{DynamicResource Menu_CopyToClipboard}"
                                                Command="{Binding CopyFrameToClipboardCommand}"
                                                CommandParameter="{Binding PlacementTarget.DataContext,
                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                            <MenuItem Header="{DynamicResource Menu_OpenDetail}"
                                                Command="{Binding OpenFrameDetailsCommand}"
                                                CommandParameter="{Binding PlacementTarget.DataContext,
                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                                        </ContextMenu>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="{DynamicResource Header_Time}" Binding="{Binding Time}" Width="130"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Dir}" Binding="{Binding Dir}" Width="60"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Proto}" Binding="{Binding Kind}" Width="80"/>
                            <DataGridTextColumn Header="{DynamicResource Header_ID}" Binding="{Binding Id}" Width="120"/>
                            <DataGridTextColumn Header="{DynamicResource Header_DLC}" Binding="{Binding Dlc}" Width="60"/>
                            <DataGridTextColumn Header="{DynamicResource Header_Data}" Binding="{Binding Data}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </TabItem>
            </TabControl>
        </Grid>

        <!-- Bottom Controls spanning both sides -->
        <Grid Grid.Row="2" Grid.ColumnSpan="3" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="{DynamicResource Button_SendDialog}" Width="100" Margin="10,0,8,0"
                    Command="{Binding OpenSendDialogCommand}"/>
            <Button Grid.Column="1" Content="{DynamicResource Button_PeriodicDialog}" Width="110" Margin="0,0,8,0"
                    Command="{Binding OpenPeriodicDialogCommand}"/>
            <!-- Error counters (visible when supported) -->
            <DockPanel Grid.Column="2" LastChildFill="True" VerticalAlignment="Center">
  
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal"
                    Visibility="{Binding SupportsErrorCounters, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{DynamicResource Label_TEC}" Margin="0,0,6,0"/>
                    <TextBlock Text="{Binding Tec}" Width="40"/>
                    <TextBlock Text="{DynamicResource Label_REC}" Margin="12,0,6,0"/>
                    <TextBlock Text="{Binding Rec}" Width="40"/>
                </StackPanel>

                <Grid>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"
                        Visibility="{Binding SupportsBusUsage, Converter={StaticResource BoolToVis}}">
                        <TextBlock Text="{DynamicResource Label_BusUsage}" Margin="12,0,0,0"/>
                        <ProgressBar Value="{Binding BusUsage}" Width="300" Height="20" Margin="15,0,15,0"/>
                    </StackPanel>
                </Grid>
            </DockPanel>
            
            <Button Grid.Column="4" Content="{DynamicResource Button_Start}" Width="100" Margin="0,0,8,0"
                    Command="{Binding StartListeningCommand}"/>
            <Button Grid.Column="5" Content="{DynamicResource Button_Stop}" Width="100"
                    Command="{Binding StopListeningCommand}"/>
        </Grid>
    </Grid>
</Window>
