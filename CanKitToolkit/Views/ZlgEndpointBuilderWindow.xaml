<Window x:Class="CanKitToolkit.Views.ZlgEndpointBuilderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Title_ZlgBuilder}"
        Height="260" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        WindowStyle="SingleBorderWindow">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Margin="12" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Label_DeviceType}" VerticalAlignment="Center"/>
            <ComboBox x:Name="DeviceTypeCombo" Grid.Column="1" Margin="8,0,0,0"
                      ItemsSource="{Binding DeviceTypes}"
                      DisplayMemberPath="DisplayName"
                      SelectedIndex="0"/>
        </Grid>

        <Grid Margin="12,0,12,0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="130"/>
                <ColumnDefinition Width="120"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Label_DeviceIndex}" VerticalAlignment="Center"/>
            <TextBox x:Name="DeviceIndexBox" Grid.Column="1" Margin="8,0,16,0" Text="0"/>
            <TextBlock Grid.Column="2" Text="{DynamicResource Label_ChannelIndex}" VerticalAlignment="Center"/>
            <TextBox x:Name="ChannelIndexBox" Grid.Column="3" Margin="8,0,0,0" Text="0"/>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="12,8,12,0">
            <Button Width="130" Content="{DynamicResource Button_GenerateCopy}" Click="OnGenerateCopy"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="12,8,12,0">
            <TextBlock Text="Endpoint:" FontWeight="Bold"/>
            <TextBox x:Name="EndpointBox" IsReadOnly="True" FontFamily="Consolas"/>
        </StackPanel>

        <!-- Toast overlay -->
        <Border x:Name="Toast" Grid.RowSpan="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Margin="0,0,0,24"
                Background="#E0F7E9"
                BorderBrush="#2ECC71"
                BorderThickness="1"
                CornerRadius="6"
                Padding="12,6"
                Opacity="0"
                Visibility="Collapsed">
            <TextBlock Foreground="#2E7D32" Text="{DynamicResource Toast_Copied}"/>
        </Border>
    </Grid>
</Window>

