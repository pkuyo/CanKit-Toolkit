<Window x:Class="CanKitToolkit.Views.PeriodicTxWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Title_PeriodicTx}" Height="420" Width="760" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="Grid" Grid.Row="0" ItemsSource="{Binding Items}"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False" CanUserDeleteRows="False"
                  IsReadOnly="{Binding IsRunning}">
            <DataGrid.Resources>
                <Style TargetType="DataGridRow">
                    <Setter Property="ContextMenu">
                        <Setter.Value>

                            <ContextMenu DataContext="{Binding DataContext, Source={x:Reference Grid}}">
                                <MenuItem Header="{DynamicResource Common_Delete}"  Command="{Binding DeleteCommand}"   CommandParameter="{Binding PlacementTarget.DataContext,
                                                RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                            </ContextMenu>
                        </Setter.Value>
                    </Setter>
                </Style>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="{DynamicResource Header_On}" Binding="{Binding Enabled}" Width="50"/>
                <DataGridTextColumn Header="{DynamicResource Header_Frame}" Binding="{Binding Display}" Width="160" IsReadOnly="True"/>
                <DataGridTextColumn Header="{DynamicResource Header_DLC}" Binding="{Binding Dlc}" Width="60" IsReadOnly="True"/>
                <DataGridTextColumn Header="{DynamicResource Header_Flags}" Binding="{Binding FlagsDisplay}" Width="80" IsReadOnly="True"/>
                <DataGridTextColumn Header="{DynamicResource Header_Data}" Binding="{Binding DataDisplay}" Width="*" IsReadOnly="True"/>
                <DataGridTextColumn Header="{DynamicResource Header_Period}" Binding="{Binding PeriodDisplay}" Width="80" IsReadOnly="True"/>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="1" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="{DynamicResource Common_AddEllipsis}" Width="100" Margin="0,0,8,0" Command="{Binding AddCommand}"/>
            <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="Gray" Text="{DynamicResource Text_RightClickDelete}"/>
            <Button Grid.Column="2" x:Name="RunBtn" Content="{Binding RunText}" Width="100" Margin="0,0,8,0" Command="{Binding RunCommand}"/>
        </Grid>
    </Grid>
</Window>
