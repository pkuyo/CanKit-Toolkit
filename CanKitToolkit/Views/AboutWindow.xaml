<Window x:Class="CanKitToolkit.Views.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Title_About}"
        Height="240" Width="420"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="SingleBorderWindow">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" FontWeight="Bold" Text="{DynamicResource Label_AppName}"/>
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,8,0,0">
            <TextBlock Text="{DynamicResource Label_Version}"/>
            <TextBlock x:Name="VersionText" Margin="6,0,0,0"/>
        </StackPanel>
        <TextBlock Grid.Row="2" Margin="0,6,0,0" Text="{DynamicResource Label_Copyright}"/>

        <StackPanel Grid.Row="3" Orientation="Vertical" Margin="0,10,0,0">
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/pkuyo/CanKit" RequestNavigate="OnNavigate">
                    <Run Text="{DynamicResource Label_Homepage}"/>
                </Hyperlink>
            </TextBlock>
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/pkuyo/CanKit#readme" RequestNavigate="OnNavigate">
                    <Run Text="{DynamicResource Label_Documentation}"/>
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Content="{DynamicResource Common_Close}" IsDefault="True" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>

