<Window x:Class="CanKitToolkit.Views.FilterEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Button_EditFilters}" Height="360" Width="888">
    <DockPanel Margin="12">
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="{DynamicResource Common_Add}" Width="80" Margin="0,0,8,0" Command="{Binding AddCommand}"/>
            <Button Content="{DynamicResource Common_Delete}" Width="80" Command="{Binding DeleteCommand}"/>
            <Button Content="{DynamicResource Common_Close}" Width="80" Margin="16,0,0,0" IsCancel="True"/>
        </StackPanel>

        <ListView ItemsSource="{Binding Filters}" SelectedItem="{Binding Selected}" BorderThickness="1" BorderBrush="#DDD">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="{DynamicResource Label_Type}" Width="100" DisplayMemberBinding="{Binding Kind}"/>
                    <GridViewColumn Header="{DynamicResource Label_IdType}" Width="120" DisplayMemberBinding="{Binding IdType}"/>
                    <GridViewColumn Header="{DynamicResource Label_AccCodeFrom}" Width="160" DisplayMemberBinding="{Binding AccCode}"/>
                    <GridViewColumn Header="{DynamicResource Label_AccMaskTo}" Width="160" DisplayMemberBinding="{Binding AccMask}"/>
                    <GridViewColumn Header="{DynamicResource Label_Summary}" Width="280" DisplayMemberBinding="{Binding}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </DockPanel>
</Window>
