<Window x:Class="CanKitToolkit.Views.AddFilterDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Title_AddFilter}" Height="240" Width="420" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" WindowStyle="SingleBorderWindow">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="{DynamicResource Label_Type}" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="TypeCombo" Width="140">
                <ComboBoxItem Tag="Mask" Content="{DynamicResource Option_Mask}"/>
                <ComboBoxItem Tag="Range" Content="{DynamicResource Option_Range}"/>
            </ComboBox>

            <TextBlock Text="{DynamicResource Label_IdType}" VerticalAlignment="Center" Margin="16,0,8,0"/>
            <ComboBox x:Name="IdTypeCombo" Width="140">
                <ComboBoxItem Tag="Standard" Content="{DynamicResource Option_Standard}"/>
                <ComboBoxItem Tag="Extend" Content="{DynamicResource Option_Extend}"/>
            </ComboBox>
        </StackPanel>

        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Label_AccCodeFrom}" VerticalAlignment="Center"/>
            <TextBox x:Name="FirstBox" Grid.Column="1" Margin="8,0,0,0"/>
            <TextBlock Text="{DynamicResource Label_AccMaskTo}" VerticalAlignment="Center" Grid.Column="2" Margin="16,0,0,0"/>
            <TextBox x:Name="SecondBox" Grid.Column="3" Margin="8,0,0,0"/>
        </Grid>

        <TextBlock Grid.Row="2" Foreground="Gray" Text="{DynamicResource Text_NumberHint}"/>

        <StackPanel Orientation="Horizontal" Grid.Row="4" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Width="90" Content="{DynamicResource Common_OK}" IsDefault="True" Click="OnOk" Margin="0,0,8,0"/>
            <Button Width="90" Content="{DynamicResource Common_Cancel}" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
