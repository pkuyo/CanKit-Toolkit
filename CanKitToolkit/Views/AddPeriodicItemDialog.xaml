<Window x:Class="CanKitToolkit.Views.AddPeriodicItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{DynamicResource Title_AddPeriodicItem}" Height="360" Width="520" WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize" WindowStyle="SingleBorderWindow">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Frame type and ID type -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <TextBlock Text="{DynamicResource Label_Frame}" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <ComboBox x:Name="FrameTypeCombo" Width="140" SelectionChanged="OnFrameTypeChanged">
                <ComboBoxItem Tag="CAN20" Content="{DynamicResource Option_Can20}"/>
                <ComboBoxItem Tag="CANFD" Content="{DynamicResource Option_CanFd}"/>
            </ComboBox>

            <TextBlock Text="{DynamicResource Label_IdType}" VerticalAlignment="Center" Margin="16,0,8,0"/>
            <ComboBox x:Name="IdTypeCombo" Width="140">
                <ComboBoxItem Tag="Standard" Content="{DynamicResource Option_Standard}"/>
                <ComboBoxItem Tag="Extend" Content="{DynamicResource Option_Extend}"/>
            </ComboBox>
        </StackPanel>

        <!-- ID and DLC -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="{DynamicResource Label_ID}" VerticalAlignment="Center"/>
            <TextBox x:Name="IdBox" Grid.Column="1" Margin="8,0,0,0"/>
            <TextBlock Text="{DynamicResource Label_DLC}" Grid.Column="2" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <TextBox x:Name="DlcBox" Grid.Column="3" Margin="8,0,0,0"/>
            <TextBlock Text="{DynamicResource Label_PeriodMs}" Grid.Column="4" VerticalAlignment="Center" Margin="16,0,0,0"/>
            <TextBox x:Name="PeriodBox" Grid.Column="5" Margin="8,0,0,0"/>
        </Grid>

        <!-- Data -->
        <StackPanel Grid.Row="2" Orientation="Vertical">
            <TextBlock Text="{DynamicResource Label_DataHint}"/>
            <TextBox x:Name="DataBox" Margin="0,4,0,0" Height="80" AcceptsReturn="True" TextWrapping="Wrap"/>
        </StackPanel>

        <!-- Flags -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,8,0,0">
            <CheckBox x:Name="RtrCheck" Content="{DynamicResource Check_RTR}" Margin="0,0,16,0"/>
            <CheckBox x:Name="BrsCheck" Content="{DynamicResource Check_BRS}"/>
        </StackPanel>

        <TextBlock Grid.Row="4" Foreground="Gray" Text="{DynamicResource Text_SendHint}" TextWrapping="Wrap"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="{DynamicResource Common_OK}" Width="90" Margin="0,0,8,0" IsDefault="True" Click="OnOk"/>
            <Button Content="{DynamicResource Common_Cancel}" Width="90" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
